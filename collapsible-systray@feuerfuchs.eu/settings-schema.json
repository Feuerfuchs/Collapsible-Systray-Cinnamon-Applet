{
    "behavior-header": {
        "type":        "header",
        "description": "Behavior"
    },

    "animation-duration": {
        "type":        "spinbutton",
        "default":     500,
        "min":         0,
        "max":         2000,
        "step":        50,
        "units":       "milliseconds",
        "description": "Animation duration: "
    },

    "expand-on-hover": {
        "type":        "checkbox",
        "default":     false,
        "description": "Expand on hover"
    },

    "expand-on-hover-delay": {
        "type":        "spinbutton",
        "default":     1000,
        "min":         0,
        "max":         10000,
        "step":        100,
        "dependency":  "expand-on-hover",
        "units":       "milliseconds",
        "description": "Expand on hover delay: "
    },

    "collapse-on-leave": {
        "type":        "checkbox",
        "default":     false,
        "description": "Collapse on un-hover"
    },

    "collapse-on-leave-delay": {
        "type":        "spinbutton",
        "default":     1000,
        "min":         0,
        "max":         10000,
        "step":        100,
        "dependency":  "collapse-on-leave",
        "units":       "milliseconds",
        "description": "Collapse on un-hover delay: "
    },

    "init-delay": {
        "type":        "spinbutton",
        "default":     5,
        "min":         0,
        "max":         30,
        "step":        1,
        "units":       "seconds",
        "description": "Delay until initial collapse: "
    },

    "sep-1": {
        "type": "separator"
    },

    "appearance-header": {
        "type":        "header",
        "description": "Appearance"
    },

    "no-hover-for-tray-icons": {
        "type":        "checkbox",
        "default":     false,
        "description": "Disable hover effect for tray icons"
    },

    "dont-move-visible-icons": {
        "type":        "checkbox",
        "default":     false,
        "description": "Don't move visible icons on expand/collapse"
    },

    "expand-icon-name": {
        "type":         "iconfilechooser",
        "default" :     "pan-start",
        "description" : "Expand icon: "
    },

    "collapse-icon-name": {
        "type":         "iconfilechooser",
        "default" :     "pan-end",
        "description" : "Collapse icon: "
    },

    "tray-icon-hpadding": {
        "type":        "spinbutton",
        "default":     5,
        "min":         0,
        "max":         20,
        "step":        1,
        "units":       "px",
        "description": "Horizontal padding of tray icons: "
    },

    "icon-visibility-list": {
        "type":        "generic",
        "default":     "{}",
        "description": "Internal use"
    }
}
